{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": { "distDir": "dist" }
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/dist/server/index.js" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ],
  "functions": {
    "dist/server/index.js": {
      "runtime": "nodejs20.x"
    }
  }
}